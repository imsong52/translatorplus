{
    "name": "translatorplus",
    "displayName": "Translator Plus",
    "description": "Translator using google translation, press CTRL + T to start",
    "version": "1.1.0",
    "publisher": "lkytal",
	"icon": "icon.png",
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Other",
        "Linters"
    ],
	"keywords": [
		"Translate",
		"Translation",
		"Translator"
	],
	"homepage": "https://lkytal.github.io",
	"repository": {
		"type": "git",
		"url": "https://github.com/lkytal/translatorplus.git"
	},
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
		"commands": [
			{
				"command": "translatorplus.toggleTranslator",
				"title": "Toggle Translator"
			},
            {
                "command": "translatorplus.replaceByTranslation",
                "title": "Replace selection by translation"
            }
		],
        "keybindings": [
            {
                "command": "translatorplus.toggleTranslator",
                "key": "ctrl+t",
                "mac": "cmd+t",
                "when": "editorTextFocus"
            },
            {
                "command": "translatorplus.replaceByTranslation",
                "key": "ctrl+shift+t",
                "mac": "cmd+shift+t",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "translator plus configuration",
            "properties": {
                "translatorplus.targetLanguage": {
                    "type": "string",
                    "default": "",
                    "description": "target language id, like en-US, zh-CN, leave empty for auto detection."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.3.2",
        "vscode": "^1.1.0",
        "mocha": "^3.3.0",
        "@types/node": "^7.0.18",
        "@types/mocha": "^2.2.41"
    },
    "dependencies": {
        "dom-parser": "^0.1.5",
        "web-request": "^1.0.7"
    }
}